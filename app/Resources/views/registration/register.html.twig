{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Inscription</h2>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group row">
                {{ form_label(form.username, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.phoneNumber) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.champ1, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.champ1, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.champ1) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.champ2, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.champ2, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.champ2) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}