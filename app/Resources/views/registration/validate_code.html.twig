{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Validation du code</h2>

        {% for flash_message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}

        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label for="validation_code" class="col-sm-2 control-label">Entrez le code de validation re√ßu par SMS :</label>
                <div class="col-sm-10">
                    <input type="text" id="validation_code" name="validation_code" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}