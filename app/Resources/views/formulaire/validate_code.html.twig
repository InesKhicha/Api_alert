{# app/Resources/views/formulaire/validate_code.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            color: #333;
        }
        .container {
            max-width: 600px;
            margin-top: 50px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #00B6B7;
            font-weight: 600;
            margin-bottom: 30px;
            text-align: center;
            position: relative;
            padding-bottom: 10px;
        }
        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background-color: #00B6B7;
        }
        .form-group {
            margin-bottom: 25px;
        }
        label {
            font-weight: 500;
            color: #555;
        }
        .input-group {
            display: flex;
            align-items: center;
        }
        .input-group-prepend {
            margin-right: 10px;
        }
        .form-control {
            border: none;
            border-bottom: 2px solid #ddd;
            border-radius: 0;
            padding: 10px 5px;
            transition: all 0.3s ease;
            flex: 1; /* Make input take the remaining space */
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #00B6B7;
        }
        .btn-primary {
            background-color: #00B6B7;
            border: none;
            border-radius: 30px;
            padding: 10px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #009a9b;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 182, 183, 0.3);
        }
        .countdown-container {
            text-align: center;
            margin-top: 30px;
            font-size: 1.2em;
            color: #555;
        }
        #countdown {
            font-weight: 600;
            color: #00B6B7;
        }
        .alert {
            border-radius: 10px;
            border: none;
            padding: 15px;
            margin-bottom: 20px;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }
.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border-color: #f5c6cb;
}

/* Ajoutez cette règle pour forcer la couleur rouge */
.alert-danger, .alert-danger * {
    color: red !important;
}
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h2>Validation du Code</h2>

                {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert {% if type == 'danger' %}alert-danger{% else %}alert-{{ type }}{% endif %} text-center">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

        {% if showResendButton is defined and showResendButton %}
            <div class="text-center">
                <a href="{{ path('resend_code', {'codeId': codeId}) }}" class="btn btn-secondary">
                    <i class="fas fa-redo"></i> Renvoyer le code
                </a>
            </div>
        {% else %}
            <form method="post">
                <div class="form-group">
                    <label for="validation_code">Code de validation</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="text" name="validation_code" id="validation_code" class="form-control" required>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check mr-2"></i>Valider
                    </button>
                </div>
            </form>

            <div class="countdown-container">
                <p>Le code expirera dans <span id="countdown">05:00</span> minutes.</p>
            </div>
        {% endif %}
    </div>

    {% if showResendButton is not defined or not showResendButton %}
        <script>
            // Set the initial countdown time
            var initialTime = 300; // 3 minutes in seconds

            // Check if there's a saved countdown in localStorage
            var savedTimeLeft = localStorage.getItem('timeLeft');
            var timeLeft = savedTimeLeft ? parseInt(savedTimeLeft) : initialTime;
            
            // Update the countdown display
            function updateCountdownDisplay() {
                var minutes = Math.floor(timeLeft / 60);
                var seconds = timeLeft % 60;
                seconds = seconds < 10 ? '0' + seconds : seconds;
                document.getElementById('countdown').textContent = minutes + ':' + seconds;
            }

            // Start the countdown timer
            var countdownTimer = setInterval(function() {
                if (timeLeft <= 0) {
                    clearInterval(countdownTimer);
                    document.getElementById('countdown').textContent = '00:00';
                    alert('Le code de validation a expiré.');
                    localStorage.removeItem('timeLeft'); // Clear the saved time
                    document.querySelector('.countdown-container').innerHTML = '<a href="{{ path('resend_code', {'codeId': codeId}) }}" class="btn btn-secondary"><i class="fas fa-redo"></i> Renvoyer le code</a>';
                } else {
                    timeLeft--;
                    updateCountdownDisplay();
                    localStorage.setItem('timeLeft', timeLeft); // Save the time left
                }
            }, 1000);

            // Initialize the countdown display
            updateCountdownDisplay();

            // Clear localStorage when the form is submitted
            document.querySelector('form').addEventListener('submit', function() {
                localStorage.removeItem('timeLeft');
            });
        </script>
    {% endif %}
{% endblock %}
